<div class="short-url_form">
  <%= form_for(@new_url) do |f| %>
    <h3>New short url</h3>
    <%= render 'shared/form_errors', object: @new_url %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-primary right' %>
  <% end %>
</div>
